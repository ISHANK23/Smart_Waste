# Backend environment configuration
# Copy this file to .env (for shared defaults) and optionally to .env.development /.env.production
# Update the values with your deployment specific secrets before running the API.

NODE_ENV=development
PORT=4000
MONGO_URI=mongodb://127.0.0.1:27017/smart-waste
MONGO_DEBUG=true

# Authentication
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_TTL_MS=2592000000
JWT_TRACK_METADATA=true

# API access
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
LOG_LEVEL=debug